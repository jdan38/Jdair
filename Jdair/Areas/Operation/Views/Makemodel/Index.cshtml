@model IEnumerable<Makemodel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div class="main-content">
        <br /><br />

        <div class="row">
            <div class="col-6">
                <h2 class="text-info"> Make Model List</h2>
            </div>
            <br />
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>


        <div class="row row-inline-block small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content">

                    @if (Model.Count() > 0)
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Html.DisplayNameFor(m => m.Make)</th>
                                    <th>@Html.DisplayNameFor(m => m.Model)</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@Html.DisplayFor(m => item.Id)</th>
                                        <td>@Html.DisplayFor(m => item.Make)</td>
                                        <td>@Html.DisplayFor(m => item.Model)</td>
                                        <td>
                                            <partial name="_TableButtonPartial" model="item.Id" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="box-content">
                            <h4 class="box-title">Aircraft List</h4>
                            <!-- /.box-title -->
                            <div class="dropdown js__drop_down">

                                <!-- /.sub-menu -->
                            </div>
                            <!-- /.dropdown js__dropdown -->
                            <div class="chartist-chart" style="height: 320px"><p>No Categories Exist</p></div>
                            <!-- /#smil-animation-chartist-chart.chartist-chart -->
                        </div>

                    }
                </div>

            </div>

        </div>
    </div>
</div>